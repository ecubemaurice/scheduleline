<mvc:View controllerName="zwo.ui.wks_rep.controller.Dashboard"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns:viz="sap.viz.ui5.controls" displayBlock="true" height="100%"
	busy="{DashboardView>/busy}"
	busyIndicatorDelay="{DashboardView>/BusyDelay}">
	<Page id="dashboard" title="{i18n>dashboardTitle}"
		enableScrolling="true">
		<!-- Main Header -->
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title level="H2" text="{i18n>homePageTitle}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<VBox width="auto" alignItems="Center" justifyContent="Center"
				class="sapUiSmallMarginBegin sapUiTinyMarginEnd sapUiNoMarginTopBottom sapUiSmallContentPadding">
				<FlexBox width="auto" alignItems="Start"
					justifyContent="Center"
					class="sapUiSmallMarginBegin sapUiTinyMarginEnd sapUiNoMarginTopBottom sapUiNoContentPadding">
					<items>
						<List items="{ path : 'ProjectSet>/'}" class="inlineList"
							sticky="HeaderToolbar">
							<headerToolbar design="Transparent">
								<Toolbar>
									<HBox class="sapUiNoMargin sapUiNoContentPadding"
										wrap="Wrap" alignItems="Center">
										<VBox
											class="sapUiTinyMargin sapUiNoContentPadding myProjLabel">
											<Label text="{i18n>labelReportDate}"
												class="sapUiSmallMarginTopBottom sapUiNoMarginBeginEnd" />
										</VBox>
										<VBox
											class="sapUiNoMarginBegin sapUiTinyMarginEnd sapUiTinyMarginTopBottom sapUiNoContentPadding customHeaderControl">
											<DatePicker id="selectProjectDate"
												value="{ProjectFilters>/selDate}"
												displayFormat="{= ${user>/DateFormat} ? ${user>/DateFormat} : 'MM/dd/yyyy'}"
												valueFormat="yyyy-MM-ddThh:mm:ss" change="handleDateChange"
												width="100%" />
										</VBox>
										<VBox
											class="sapUiTinyMargin sapUiNoContentPadding customHeaderControl"
											justifyContent="">
											<SearchField id="selectForemanList"
												class="sapUiLargeMarginEnd mySelectForeman" width="100%"
												placeholder="{i18n>dBSelectPlacehdr}"
												enableSuggestions="true" search="onSelectForeman"
												suggest="onSuggestForeman" />
										</VBox>
									</HBox>
									<ToolbarSpacer />
									<VBox
										class="sapUiTinyMargin sapUiNoContentPadding customHeaderControl">
										<SearchField id="searchProjField"
											class="sapUiLargeMarginEnd" width="100%"
											placeholder="{i18n>dBSearchPlacehdr}"
											enableSuggestions="true" search="onSearchProject"
											suggest="onSuggestProject" />
									</VBox>
								</Toolbar>
							</headerToolbar>
							<CustomListItem class="sapUiTinyMargin"
								type="{= ${ProjectSet>Enabled} ? 'Active' : 'Inactive'}"
								width="370px" press="onPressProject">
								<customData>
									<core:CustomData key="disabled" value="true"
										writeToDom="{= !${ProjectSet>Enabled} }" />
								</customData>
								<core:Fragment
									fragmentName="zwo.ui.wks_rep.view.fragment.ProjectChart"
									type="XML" />
							</CustomListItem>
						</List>
					</items>
				</FlexBox>
			</VBox>
		</content>
	</Page>
</mvc:View>