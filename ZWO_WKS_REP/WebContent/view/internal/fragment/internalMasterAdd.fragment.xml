<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="internalMasterAdd" class="masterAddDialog"
		title="{Form>/title}" draggable="true">
		<content>
			<f:SimpleForm id="internalnMasterAddForm"
				editable="true">
				<f:content>
					<VBox alignItems="End">
						<HBox alignItems="Center">
							<Label text="{i18n>materialNo}" labelFor="idMaterialNo"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idMaterialNo" width="200px"
								value="{Input>/MaterialNo}"
								valueHelpRequest="onRequestMaterialSpec" showValueHelp="true"
								required="true" class="addFormInput" editable="true"
								liveChange="onInputChange" submit="onSubmitMaterialNo" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>materialDesc}" labelFor="idMaterialDesc"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idMaterialDesc" width="200px"
								value="{Input>/MaterialDesc}" class="addFormInput"
								editable="true" liveChange="onInputChange" required="true" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>wbsElement}" labelFor="idWbsElement"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idWbsElement" width="200px"
								value="{Input>/WbsElement}" valueHelpRequest="onRequestWBS"
								showValueHelp="true" class="addFormInput" editable="true"
								liveChange="onInputChange" submit="onSubmitWBS" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>wbsName}" labelFor="idWbsName"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idWbsName" width="200px" value="{Input>/Name}"
								class="addFormInput" editable="true" liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>UnitPrice}" labelFor="idUnitPrice"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idUnitPrice" value="{Input>/Price}"
								width="200px" type="Number" class="addFormInput" editable="true"
								liveChange="onInputChange" change="onAfterInputChanged"
								required="true" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>costCode}" labelFor="idCostCode"
								class="addFormLabel sapUiSmallMarginEnd"
								visible="{= ${Form>/mode} === 'add'}" />
							<Input id="idCostCode" width="200px"
								value="{Input>/CostCode}" valueHelpRequest="onRequestCostCode"
								showValueHelp="true" required="true" class="addFormInput"
								editable="true" liveChange="onInputChange"
								visible="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>quantity}" labelFor="idQuantity"
								class="addFormLabel sapUiSmallMarginEnd"
								visible="{= ${Form>/mode} === 'add'}" />
							<Input id="idQuantity" width="200px"
								value="{Input>/Quantity}" type="Number" class="addFormInput"
								editable="true" liveChange="onInputChange"
								visible="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>delNote}" labelFor="idDelNote"
								class="addFormLabel sapUiSmallMarginEnd"
								visible="{= ${Form>/mode} === 'add'}" />
							<Input id="idDelNote" width="200px" class="addFormInput"
								value="{Input>/DeliveryNoteNo}" liveChange="onInputChange"
								change="onAfterInputChanged"
								visible="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>recPersonNo}" labelFor="idRecPersonNo"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idRecPersonNo" width="200px"
								valueHelpRequest="onRequestPersonnel" showValueHelp="true"
								required="true" class="addFormInput" value="{Input>/ForemanNo}"
								visible="{= ${Form>/mode} === 'add'}" editable="true"
								liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>version}" labelFor="idVersion"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idVersion" width="200px" class="addFormInput"
								value="{Input>/Version}" editable="true"
								visible="{= ${Form>/mode} === 'add'}" liveChange="onInputChange" />
						</HBox>
					</VBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="saveInternal" text="Save"
				press="onPressInternalSave" />
		</beginButton>
		<endButton>
			<Button id="cancelInternal" text="Cancel" press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>