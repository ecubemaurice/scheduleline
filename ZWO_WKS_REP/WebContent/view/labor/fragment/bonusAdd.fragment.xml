<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="bonusAdd" class="masterAddDialog"
		title="{Form>/title}" draggable="true">
		<content>
			<f:SimpleForm id="bonusAddForm" width="385px"
				editable="true">
				<f:content>
					<VBox alignItems="End">
						<HBox>
							<Label text="{i18n>timePointingCode}" labelFor="idTPC"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idTPC" width="200px" value="{Input>/TypeOfHour}"
								valueHelpRequest="onRequestTypeOfHour" showValueHelp="true"
								class="addFormInput"
								editable="{= ${Input>/Bonus} === '' &amp;&amp; ${Input>/BonusQty} === '0.00' &amp;&amp; ${Form>/mode} === 'add'}"
								liveChange="onInputChange" />
						</HBox>
						<HBox>
							<Label text="{i18n>timeQty}" labelFor="idTimeQty"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idTimeQty" value="{Input>/HoursQty}"
								width="200px" class="addFormInput" type="Number"
								editable="{= ${Input>/Bonus} === '' &amp;&amp; ${Input>/BonusQty} === '0.00'}"
								liveChange="onInputChange" change="onAfterInputChanged" />
						</HBox>
						<HBox>
							<Label text="{i18n>primePointingCode}" labelFor="idPPC"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idPPC" width="200px" value="{Input>/Bonus}"
								valueHelpRequest="onRequestBonus" showValueHelp="true"
								class="addFormInput"
								editable="{= ${Input>/TypeOfHour} === '' &amp;&amp; ${Input>/HoursQty} === '0.00' &amp;&amp; ${Form>/mode} === 'add'}"
								liveChange="onInputChange" />
						</HBox>
						<HBox>
							<Label text="{i18n>primeQty}" labelFor="idPrimeQty"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idPrimeQty" width="200px"
								value="{Input>/BonusQty}" type="Number" class="addFormInput"
								editable="{= ${Input>/TypeOfHour} === '' &amp;&amp; ${Input>/HoursQty} === '0.00'}"
								liveChange="onInputChange" change="onAfterInputChanged" />
						</HBox>
						<HBox>
							<Label text="{i18n>wbsElement}" labelFor="idWBSElement"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idWBSElement" width="200px"
								value="{Input>/WBSElement}" valueHelpRequest="onRequestWBS"
								showValueHelp="true" class="addFormInput" />
						</HBox>
						<HBox>
							<Label text="{i18n>activityType}"
								labelFor="idActivityTypeBonus"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idActivityTypeBonus" width="200px"
								value="{Input>/ActivityType}"
								valueHelpRequest="onRequestActivityStdN" showValueHelp="true"
								class="addFormInput" />
						</HBox>
					</VBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="saveBonus" text="Save" press="handleBonusSave" />
		</beginButton>
		<endButton>
			<Button id="cancelBonus" text="Cancel" press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>