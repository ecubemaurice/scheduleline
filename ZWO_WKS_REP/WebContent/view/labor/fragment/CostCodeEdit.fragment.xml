<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="costCodeEdit" class="masterAddDialog"
		title="{Form>/title}" draggable="true">
		<content>
			<Carousel id="editCarousel" pages="{path:'Input>/'}"
				width="450px" pageIndicatorPlacement="Bottom" loop="true"
				showPageIndicator="true" arrowsPlacement="PageIndicator">
				<pages>
					<f:SimpleForm id="costCodeEditForm" width="415px"
						editable="true">
						<f:content>
							<VBox alignItems="End">
								<HBox>
									<Label text="{i18n>costCode}" required="true"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" valueHelpRequest="onRequestCostCode"
										showValueHelp="true" submit="onSubmitCostCode" required="true"
										class="addFormInput" value="{Input>CostCode}" editable="true"
										liveChange="onInputChange" />
								</HBox>
								<HBox>
									<Label text="{i18n>costCodeDesc}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" required="true" class="addFormInput"
										value="{Input>CostCodeDes}"
										editable="{= ${Form>/mode} === 'add'}"
										liveChange="onInputChange" />
								</HBox>
								<HBox>
									<Label text="{i18n>qtyDay}" required="true"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" type="Number" required="true"
										class="addFormInput" value="{Input>QtyDay}"
										liveChange="onInputChange" />
								</HBox>
								<HBox
									visible="{= ${InScreenFilters>/ProjectSet/Country} === 'QC'}">
									<Label text="{i18n>td}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" type="Number" class="addFormInput"
										value="{Input>Td}" liveChange="onInputChange" />
								</HBox>
								<HBox>
									<Label text="{i18n>origin}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" class="addFormInput"
										value="{Input>Origin}" editable="false"
										liveChange="onInputChange" />
								</HBox>
								<HBox>
									<Label text="{i18n>recPersonNo}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px"
										valueHelpRequest="onRequestPersonnel" showValueHelp="true"
										required="true" class="addFormInput" value="{Input>ForemanNo}"
										editable="false" liveChange="onInputChange"
										submit="onSubmitRecNo" />
								</HBox>
								<HBox>
									<Label text="{i18n>recPersonName}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" class="addFormInput"
										value="{Input>ForemanName}" required="true" editable="false"
										liveChange="onInputChange" />
								</HBox>
								<HBox>
									<Label text="{i18n>version}"
										class="addFormLabel sapUiSmallMarginEnd" />
									<Input width="200px" class="addFormInput"
										value="{Input>Version}" editable="false"
										liveChange="onInputChange" />
								</HBox>
							</VBox>
						</f:content>
					</f:SimpleForm>
				</pages>
			</Carousel>
		</content>
		<beginButton>
			<Button id="saveCostCodeEdit" text="{i18n>save}"
				press="handleSaveCostCode" />
		</beginButton>
		<endButton>
			<Button id="cancelCostCodeEdit" text="{i18n>cancel}"
				press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>