<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover id="sSelectCategory"
		showHeader="false" contentWidth="193px" contentHeight="166px"
		showArrow="false" placement="Bottom">
		<content>
			<Table id="categorySelectList"
				class="sapUiNoMargin sapUiNoContentPadding"
				items="{path: 'categoryList>/'}" mode="MultiSelect">
				<columns>
					<Column />
				</columns>
				<items>
					<ColumnListItem selected="{categoryList>selected}">
						<cells>
							<Text text="{categoryList>category}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton>
			<Button id="acceptCategory" text="{i18n>ok}"
				press="handleAcceptCategory" />
		</beginButton>
		<endButton>
			<Button id="declineCategory" text="{i18n>cancel}"
				press="handleDeclineCategory" />
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>