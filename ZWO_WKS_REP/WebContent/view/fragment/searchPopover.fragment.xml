<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover id="sSearchPopover"
		showHeader="false" contentWidth="290px" contentHeight="250px"
		showArrow="false" placement="Bottom" afterOpen="onSearchPopoverOpened">
		<content>
			<Table id="resultList"
				class="sapUiNoMargin sapUiNoContentPadding" items="{projectDesc>/}"
				noDataText="{i18n>tableNoDataText}" mode="SingleSelectMaster">
				<columns>
					<Column />
					<Column />
				</columns>
				<ColumnListItem>
					<cells>
						<Text text="{projectDesc>Name}" wrapping="false"
							class="sapMSampleTextMaxLinesText" tooltip="{projectDesc>Name}" />
						<Text text="{projectDesc>Number}" />
					</cells>
				</ColumnListItem>
			</Table>
		</content>
		<beginButton>
			<Button id="acceptSearch" text="{i18n>ok}"
				press="handleAcceptSearch" />
		</beginButton>
		<endButton>
			<Button id="declineSearch" text="{i18n>cancel}"
				press="handleDeclineSearch" />
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>