<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover id="sReportPopover"
		showHeader="false" contentWidth="195px" contentHeight="250px"
		showArrow="false" placement="Bottom">
		<content>
			<Table id="reportSelection" class=""
				items="{path: 'reportList>/',
        			sorter: [{path: 'ForemanName', descending: false},
        			{path: 'Version', descending: false}]}"
				noDataText="{i18n>tableNoReport}" mode="MultiSelect">
				<columns>
					<Column width="20%" />
					<Column width="67%" />
					<Column width="13%" />
				</columns>
				<items>
					<!-- <ColumnListItem
						selected="{path: 'reportList>ForemanNo', formatter: '.formatter.checkSelForemen'}"> -->
					<ColumnListItem>
						<cells>
							<Text text="V {reportList>Version}" class="customVersion"
								tooltip="Version {reportList>Version}" />
							<VBox class="sapUiTinyMargin">
								<Text text="{reportList>ForemanName}" wrapping="false"
									class="sapMSampleTextMaxLinesText customName"
									tooltip="{reportList>ForemanName}" />
								<Text text="{reportList>ForemanNo}" class="customPersonNo" />
							</VBox>
							<Text text="{ path: 'reportList>Origin' }"
								class="customPapyrus" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton>
			<Button id="acceptReport" text="{i18n>ok}"
				press="handleAcceptReport" />
		</beginButton>
		<endButton>
			<Button id="declineReport" text="{i18n>cancel}"
				press="handleDeclineReport" />
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>