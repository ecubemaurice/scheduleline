<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover id="sSelectStatus"
		showHeader="false" contentWidth="195px" contentHeight="172px"
		showArrow="false" placement="Bottom">
		<content>
			<Table id="statusSelectList"
				class="sapUiNoMargin sapUiNoContentPadding customStatusTable"
				items="{path: 'statusList>/'}" mode="MultiSelect">
				<columns>
					<Column class="sapUiNoMargin sapUiNoContentPadding" />
				</columns>
				<items>
					<ColumnListItem
						highlight="{	
							path: 'statusList>status',
							formatter: '.formatter.setIntStatus'}">
						<customData>
							<core:CustomData key="disabled" value="true"
								writeToDom="{= ${statusList>index} === '6'}" />
						</customData>
						<cells>
							<Text text="{statusList>status}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton>
			<Button id="acceptStatus" text="{i18n>ok}"
				press="handleAcceptStatus" />
		</beginButton>
		<endButton>
			<Button id="declineStatus" text="{i18n>cancel}"
				press="handleDeclineStatus" />
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>