<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog id="exportDialog" contentWidth="413px"
		contentHeight="445px" busy="{ExportView>/busy}"
		busyIndicatorDelay="{ExportView>/BusyDelay}"
		title="{i18n>exportPapyrusBtnTxt}" draggable="true">
		<content>
			<Table id="categoryExportList" items="{path: 'exportList>/'}"
				mode="MultiSelect" showNoData="true" sticky="ColumnHeaders"
				class="sapUiNoMargin sapUiNoContentPadding">
				<columns class="sapUiNoContentPadding">
					<Column>
						<Text text="{i18n>integrationText}" />
					</Column>
				</columns>
				<items>
					<ColumnListItem selected="{exportList>selected}">
						<cells>
							<HBox>
								<core:Icon src="{exportList>icon}"
									class="sapUiTinyMarginEnd" />
								<Text text="{exportList>category}" />
							</HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton>
			<Button id="exportId" text="{i18n>exportButtonText}"
				press="onPressConfirmExport" />
		</beginButton>
		<endButton>
			<Button id="cancelExport" text="{i18n>cancel}"
				press="handleCloseExport" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>