<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:c="sap.suite.ui.commons"
	displayBlock="true">
	<l:FixFlex id="chartFixFlex" class="myFixFlex"
		minFlexSize="350px" width="100%">
		<l:fixContent height="100px">
			<Panel id="projDetailsPanel" width="auto">
				<headerToolbar width="100%">
					<!-- <Toolbar height="100%" width="100%" active="true" press="onPressProject"> -->
					<Toolbar height="100%" width="100%">
						<HBox width="auto"
							class="sapUiNoMargin sapUiNoContentPadding"
							justifyContent="Center">
							<HBox class="sapUiTinyMarginEnd">
								<CheckBox id="projectChkBox" class="myProjChkBox"
									selected="{ProjectSet>Selected}" visible="true"
									enabled="{ProjectSet>Enabled}" select="handleCheckProj" />
							</HBox>
							<VBox height="100%" width="100%" justifyContent="Center"
								class="sapUiTinyMarginEnd sapUiTinyMarginTop">
								<Label text="{ProjectSet>ProjectName}" class="myProjName"
									tooltip="{ProjectSet>ProjectName}">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= !${ProjectSet>Enabled} }" />
									</customData>
								</Label>
								<ObjectIdentifier
									class="sapUiNoContentPadding sapUiTinyMarginBottom projNoFontSize"
									text="{i18n>noProject} : {ProjectSet>ProjectNo}" />
								<HBox class="sapUiNoMargin sapUiNoContentPadding"
									justifyContent="SpaceBetween">
									<ObjectIdentifier title="{i18n>totalDayCost}:"
										class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiTinyMarginEnd" />
									<ObjectNumber
										number="{
											parts:[{path:'ProjectSet>TotalCost'},{path:'ProjectSet>Currency'}],
											type: 'sap.ui.model.type.Currency',
											formatOptions: {showMeasure: false}
										}"
										unit="{ProjectSet>Currency}"
										class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
								</HBox>
								<ObjectStatus
									class="sapUiNoContentPadding sapUiNoMarginBegin sapUiNoMarginEnd sapUiSmallMarginBottom"
									text="{path: 'ProjectSet>NumReports',
                                          	formatter: '.formatter.getNumRepText'
                                          }"
									state="{= ${ProjectSet>NumReports} > 0 ? 'Error' : 'None'}" />
							</VBox>
							<HBox>
								<ToggleButton icon="sap-icon://favorite"
									press="onPressFav" enabled="{ProjectSet>Enabled}"
									class="sapUiNoMargin sapUiNoContentPadding myFavBtn myPressedFavBtn"
									pressed="{ProjectSet>FlagFavorite}" />
							</HBox>
						</HBox>
					</Toolbar>
				</headerToolbar>
			</Panel>
		</l:fixContent>
		<l:flexContent>
			<Panel id="PanelChart"
				class="sapUiNoMargin sapUiNoContentPadding" height="355px">
				<content>
					<!-- <ObjectIdentifier
						class="sapUiMediumMarginBegin sapUiNoMarginTop sapUiNoMarginBottom"
						title="{ProjectSet>ExistingData} {i18n>existingData}">
					</ObjectIdentifier> -->
					<HBox id="ProjectHBox" justifyContent="Center"
						alignItems="Start" width="370px">
						<viz:VizFrame id="idVizDonut"
							uiConfig="{applicationSet:'fiori'}" vizType='donut'
							title="{visible:'false'}" renderComplete="onRenderChart"
							width="250px" height="280px">
							<viz:feeds>
								<viz.feeds:FeedItem uid="size" type="Measure"
									values="NumReports" />
								<viz.feeds:FeedItem uid="color"
									type="Dimension" values="Status" />
							</viz:feeds>
							<viz:dataset>
								<viz.data:FlattenedDataset
									data="{ path : 'ProjectSet>Integrations'}">
									<viz.data:dimensions>
										<viz.data:DimensionDefinition
											name="Status" value="{Status}" />
									</viz.data:dimensions>
									<viz.data:measures>
										<viz.data:MeasureDefinition
											name="NumReports" value="{NumReports}" />
									</viz.data:measures>
								</viz.data:FlattenedDataset>
							</viz:dataset>
						</viz:VizFrame>
					</HBox>
					<HBox justifyContent="Center" alignItems="Start" width=""
						class="sapUiNoMargin sapUiNoPadding myBtn">
						<Button icon="sap-icon://documents"
							class="sapUiSmallMarginEnd synthesisBtn"
							press="onDisplaySynthesis" enabled="{ProjectSet>Enabled}"
							tooltip="Display Synthesis" />
						 	<!-- <Button text="{i18n>btnSynthesis}" class="sapUiTinyMarginEnd"
								width="150px" press="onDisplaySynthesis" enabled="{ProjectSet>Enabled}"/>  -->
						<Button icon="sap-icon://ipad-2"
							class="sapUiSmallMarginEnd synthesisBtn"
							press="onDisplayPapyrusSynthesis" enabled="{ProjectSet>Enabled}"
							tooltip="Display Papyrus Synthesis" />
							<!-- <Button text="{i18n>btnPapyrusSynthesis}" width="150px"
								press="onDisplayPapyrusSynthesis" enabled="{ProjectSet>Enabled}"/> -->
					</HBox>
				</content>
			</Panel>
		</l:flexContent>
	</l:FixFlex>
</core:FragmentDefinition>