<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover id="sSelectPopover"
		showHeader="false" contentWidth="290px" contentHeight="250px"
		showArrow="false" placement="Bottom">
		<content>
			<Table id="foremanSelectList"
				class="sapUiNoMargin sapUiNoContentPadding" items="{foremanList>/}"
				noDataText="{i18n>tableNoForeman}" mode="MultiSelect">
				<columns>
					<Column width="30%" />
					<Column width="70%" />
				</columns>
				<ColumnListItem>
					<cells>
						<Text text="{foremanList>ForemanNo}" />
						<Text text="{foremanList>ForemanName}" wrapping="false"
							class="sapMSampleTextMaxLinesText"
							tooltip="{foremanList>ForemanName}" />
					</cells>
				</ColumnListItem>
			</Table>
		</content>
		<beginButton>
			<Button id="acceptSelection" text="{i18n>ok}"
				press="handleAcceptForemen" />
		</beginButton>
		<endButton>
			<Button id="declineSelection" text="{i18n>cancel}"
				press="handleDeclineForemen" />
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>