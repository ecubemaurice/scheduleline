<mvc:View controllerName="zwo.ui.wks_rep.controller.Project"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" displayBlock="true" busy="{ProjectView>/busy}"
	busyIndicatorDelay="{ProjectView>/BusyDelay}">
	<Page id="project" title="{i18n>projectTitle}"
		enableScrolling="false" onAfterRendering="onMainPageRendered"
		class="projectContent">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title level="H2" text="{i18n>homePageTitle}" />
				</contentMiddle>
				<contentLeft>
					<Button icon="sap-icon://home" press="onNavHome" />
				</contentLeft>
			</Bar>
		</customHeader>
		<content>
			<Panel class="customSubHeaderBackground" width="100%">
				<headerToolbar class="sapUiResponsiveMargin">
					<Toolbar>
						<Title level="H2"
							text="{InScreenFilters>/ProjectSet/ProjectName}"
							class="customHomePanelTitle" />
					</Toolbar>
				</headerToolbar>
				<content>
					<FlexBox width="auto" alignItems="Start"
						justifyContent="Start"
						class="sapUiTinyMargin sapUiSmallContentPadding" wrap="Wrap">
						<items>
							<VBox
								class="sapUiTinyMarginBegin sapUiSmallMarginEnd sapUiSmallContentPadding">
								<Label text="{i18n>projectNo}" labelFor="projectNoFld"
									class="customHeaderTextColor" />
								<Label class="customLabel" textAlign="Left"
									text="{InScreenFilters>/ProjectSet/ProjectNo}" width="160px" />
							</VBox>
							<VBox
								class="sapUiSmallMarginBeginEnd sapUiSmallContentPadding">
								<Label text="{i18n>day}" labelFor="projectDateNoEdit"
									class="customHeaderTextColor" />
								<Label class="customLabel" textAlign="Left"
									text="{ path: 'InScreenFilters>/ProjectSet/Day', formatter: '.formatter.formatDisplayDate' }"
									width="160px" />
							</VBox>
							<VBox
								class="sapUiSmallMarginBeginEnd sapUiSmallContentPadding">
								<Label text="{i18n>reportSelected}"
									class="customHeaderTextColor" />
								<SearchField id="selectReport"
									class="mySelectForeman customLabelReport" width="200px"
									placeholder="{i18n>dBSelectReportPlacehdr}" maxLength="1"
									liveChange="onNoInputLiveChange" search="onSelectReport" />
							</VBox>
							<VBox
								class="sapUiSmallMarginBeginEnd sapUiSmallContentPadding">
								<Label text="{i18n>statusToDisplay}"
									class="customHeaderTextColor" />
								<SearchField id="selectStatus"
									class="mySelectForeman" width="190px"
									placeholder="{i18n>statusTxt}" maxLength="1"
									liveChange="onNoInputLiveChange" search="onSelectStatus" />
							</VBox>
							<VBox
								class="sapUiSmallMarginBeginEnd sapUiSmallContentPadding">
								<Label text="{i18n>categoryToDisplay}"
									class="customHeaderTextColor" />
								<SearchField id="selectCategory"
									class="mySelectForeman" width="190px"
									placeholder="{i18n>AllCategoryTxt}" maxLength="1"
									liveChange="onNoInputLiveChange" search="onSelectCategory" />
							</VBox>

						<!-- Header button -->
							<VBox
								class="sapUiTinyMarginTop sapUiMediumMarginBegin sapUiNoContentPadding">
								<Toolbar class="customHeaderToolbar">
									<ToolbarSpacer />
									<ToggleButton id="flagAllBtn"
										text="{i18n>showUnFlagAllButtonText}" pressed="true"
										press="onPressFlagAll" icon="sap-icon://flag"
										class="customFlagAllButton" />
								</Toolbar>
							</VBox>
						</items>
					</FlexBox>
				</content>
			</Panel>
			<Panel id="IcnTabPanel" height="85%" width="auto">
				<IconTabBar id="idIconTabBar"
					select="handleIconTabBarSelect" class="myIconTabBar"
					expandable="false" stretchContentHeight="true">
					<items>
						<IconTabFilter id="iconLabor"
							class="myIconColor sapUiNoMargin"
							icon="sap-icon://person-placeholder" design="Horizontal"
							text="{i18n>Lab}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatLab', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Lab}">
							<SplitContainer id="LaborSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconTemporary"
							icon="sap-icon://employee" design="Horizontal" text="{i18n>Temp}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatTem', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Temp}">
							<SplitContainer id="TempSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconEquipment"
							icon="sap-icon://inventory" design="Horizontal"
							text="{i18n>Equip}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatEqu', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Equip}">
							<SplitContainer id="EquipSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconRental"
							icon="sap-icon://shipping-status" design="Horizontal"
							text="{i18n>Rent}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatRen', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Rent}">
							<SplitContainer id="RentalSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconMaterial"
							icon="sap-icon://program-triangles-2" design="Horizontal"
							text="{i18n>Mat}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatMat', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Mat}">
							<SplitContainer id="MaterialSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconSubcon"
							icon="sap-icon://decision" design="Horizontal"
							text="{i18n>SubCon}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatSub', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>SubCon}">
							<SplitContainer id="SubConSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconInternal"
							icon="sap-icon://example" design="Horizontal"
							text="{i18n>Intern}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatInt', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Intern}">
							<SplitContainer id="InternalSplitApp" />
						</IconTabFilter>
						<IconTabFilter id="iconQty"
							icon="sap-icon://measure" design="Horizontal" text="{i18n>Qty}"
							iconColor="{ path: 'InScreenFilters>/ProjectSet/IntStatQua', 
								formatter: '.formatter.setCategoryStatus'}"
							key="{i18n>Qty}">
							<SplitContainer id="QuantitySplitApp" />
						</IconTabFilter>
					</items>
				</IconTabBar>
			</Panel>
		</content>
		<footer>
			<Bar class="myCustomFooter">
				<contentRight>
					<Button text="{i18n>controlButtonText}"
						press="onPressControl"
						class="sapUiLargeMarginBegin myCustomIntegrateBtn" />
					<Button text="{i18n>integrateButtonText}"
						class="myCustomIntegrateBtn" press="onPressIntegrate" />
					<Button text="{i18n>previewButtonText}"
						class="myCustomPreviewBtn sapUiMediumMarginEnd"
						press="onPressPreview" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>