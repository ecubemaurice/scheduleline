<mvc:View
	controllerName="zwo.ui.wks_rep.controller.equipment.EquipMaster"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	busy="{EquipView>/busy}" busyIndicatorDelay="{EquipView>/BusyDelay}">
	<Page id="equipmaster">
		<customHeader>
			<core:Fragment
				fragmentName="zwo.ui.wks_rep.view.fragment.MasterHeader" type="XML" />
		</customHeader>
		<content>
			<Panel class="sapUiNoMargin sapUiNoContentPadding">
				<List id="masterList" class="customMasterList" items="{}"
					updateStarted="onMasterListUpdating"
					updateFinished="onMasterListUpdated">
					<CustomListItem id="equipList" type="Active"
						press="onPressMasterItem"
						highlight="{
							path: 'IntStatus',
							formatter: '.formatter.setMasterStatus'
						}">
						<customData>
							<core:CustomData key="disabled" value="true"
								writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
						</customData>
						<HBox>
							<VBox class="sapUiTinyMarginBegin sapUiSmallMarginTopBottom">
								<CheckBox id="equipChkBox" select="onSelectMasterItem" />
								<ToggleButton id="flagEquipBtn"
									icon="sap-icon://flag" pressed="{FlagInt}" press="onPressFlag"
									class="myFlagBtn myPressedFlagBtn sapUiSmallTinyBegin"
									type="Transparent" visible="{= !${FlagLocked} }" />
								<Button id="lockEquipBtn" icon="sap-icon://locked"
									class="myLockBtn myPressedLockBtn sapUiSmallTinyBegin"
									type="Transparent" visible="{= ${FlagLocked} }" />
							</VBox>
							<VBox width="150px"
								class="sapUiTinyMarginBeginEnd sapUiSmallMarginTopBottom sapUiTinyMarginEnd">
								<Text text="{EquipmentName}" tooltip="{EquipmentName}"
									wrapping="false"
									class="myMasterBigFont sapMSampleTextMaxLinesText">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{EquipmentNo}" class="myMasterSmallFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{MuName}" class="myMasterSmallFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{Mu}" class="myMasterMediumFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
							</VBox>
							<VBox
								class="sapUiSmallMarginTopBottom sapUiNoContentPadding sapUiTinyMarginBeginEnd"
								justifyContent="Right" alignItems="End">
								<Text text="{TotCost}" class="myMasterBigFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{Currency}" class="myMasterSmallFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{TotQtyOperated} {Unit}"
									class="myMasterSmallFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
								<Text text="{ActivityType}" class="myMasterMediumFont">
									<customData>
										<core:CustomData key="disabled" value="true"
											writeToDom="{= ${IntStatus} === '6' || ${IntStatus} === '7'}" />
									</customData>
								</Text>
							</VBox>
						</HBox>
					</CustomListItem>
				</List>
			</Panel>
		</content>
		<footer>
			<core:Fragment
				fragmentName="zwo.ui.wks_rep.view.fragment.MasterFooter" type="XML" />
		</footer>
	</Page>
</mvc:View>