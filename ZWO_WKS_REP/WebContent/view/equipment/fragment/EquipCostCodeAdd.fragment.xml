<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="EquipCostCodeAdd" class="masterAddDialog"
		title="{Form>/title}" draggable="true">
		<content>
			<f:SimpleForm id="EquipCostCodeAddForm" width="415px"
				editable="true">
				<f:content>
					<VBox alignItems="End">
						<HBox>
							<Label text="{i18n>costCode}"
								class="addFormLabel sapUiSmallMarginEnd"
								required="{= ${Input>/Status} === '' || ${Input>/Status} === 'N' || ${Input>/Status} === 'W'}" />
							<Input width="200px" valueHelpRequest="onRequestCostCode"
								showValueHelp="true"
								required="{= ${Input>/Status} === '' || ${Input>/Status} === 'N' || ${Input>/Status} === 'W'}"
								class="addFormInput" value="{Input>/CostCode}" editable="true"
								liveChange="onInputChange" submit="onSubmitCostCode" />
						</HBox>
						<HBox>
							<Label text="{i18n>costCodeDesc}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input width="200px" class="addFormInput"
								value="{Input>/CostCodeDes}" editable="false"
								liveChange="onInputChange" />
						</HBox>
						<HBox>
							<Label text="{i18n>quantity}"
								class="addFormLabel sapUiSmallMarginEnd" required="true" />
							<Input width="200px" type="Number" class="addFormInput"
								value="{Input>/Quantity}" required="true"
								liveChange="onInputChange" change="onAfterInputChanged" />
						</HBox>
						<HBox>
							<Label text="{i18n>status}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input width="200px" class="addFormInput"
								value="{Input>/Status}" liveChange="onInputChange"
								change="onAfterInputChanged"
								valueHelpRequest="onRequestEquipStatus" showValueHelp="true" />
						</HBox>
						<HBox>
							<Label text="{i18n>origin}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input width="200px" class="addFormInput"
								value="{Input>/Origin}" editable="false"
								liveChange="onInputChange" />
						</HBox>
						<HBox>
							<Label text="{i18n>recPersonNo}"
								class="addFormLabel sapUiSmallMarginEnd" required="true" />
							<Input width="200px" valueHelpRequest="onRequestPersonnel"
								showValueHelp="true" required="true" class="addFormInput"
								value="{Input>/ForemanNo}" liveChange="onInputChange"
								editable="{= ${Form>/mode} === 'add' ? true : ${Input>/Origin} === 'M' ? true : false}"
								submit="onSubmitRecNo" />
						</HBox>
						<HBox>
							<Label text="{i18n>recPersonName}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input width="200px" class="addFormInput"
								value="{Input>/ForemanName}" editable="false"
								liveChange="onInputChange" />
						</HBox>
						<HBox>
							<Label text="{i18n>version}"
								class="addFormLabel sapUiSmallMarginEnd"
								required="{= ${Input>/Origin} === 'M' ? false : true}" />
							<Input width="200px" class="addFormInput"
								value="{Input>/Version}"
								required="{= ${Input>/Origin} === 'M' ? false : true}"
								liveChange="onInputChange"
								editable="{= ${Form>/mode} === 'add' ? true : ${Input>/Origin} === 'M' ? true : false}" />
						</HBox>
					</VBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="saveCostCodeEquip" text="Save"
				press="handleSaveCostCode" />
		</beginButton>
		<endButton>
			<Button id="cancelCostCode" text="Cancel" press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>