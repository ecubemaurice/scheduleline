<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="masterAdd" class="masterAddDialog"
		title="{Form>/title}" draggable="true">
		<content>
			<f:SimpleForm id="masterAddForm" width="400px"
				editable="true">
				<f:content>
					<VBox alignItems="End">
						<HBox alignItems="Center">
							<Label text="{i18n>equipmentNo}" labelFor="idEquipNo"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idEquipNo" width="200px"
								value="{Input>/EquipmentNo}" valueHelpRequest="onRequestEquipNo"
								showValueHelp="true" required="true" class="addFormInput"
								editable="true" liveChange="onInputChange"
								submit="onSubmitEquip" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>equipName}" labelFor="idEquipName"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idEquipName" width="200px"
								value="{Input>/EquipmentName}" required="true"
								class="addFormInput" editable="true" liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>unitNo}" labelFor="idUnitNo"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idUnitNo" width="200px" value="{Input>/Mu}"
								required="false" class="addFormInput" editable="false"
								liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>unitName}" labelFor="idUnitName"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idUnitName" width="200px"
								value="{Input>/MuName}" class="addFormInput" editable="false"
								liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>activityType}" labelFor="idActivityType"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idActivityType" width="200px"
								value="{Input>/ActivityType}"
								valueHelpRequest="onRequestActivityStdN" showValueHelp="true"
								required="true" class="addFormInput" editable="true"
								liveChange="onInputChange" submit="onSubmitActivityTypeEquip" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>UnitPrice}" labelFor="idUnitPrice"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idUnitPrice" required="true"
								value="{Input>/Price}" width="200px" type="Number"
								class="addFormInput" editable="true" liveChange="onInputChange"
								change="onAfterInputChanged" />
						</HBox>
						<HBox class="sapUiLargeMarginEnd customCheckBox"
							alignItems="Center">
							<Label text="{i18n>equipmentGang}" labelFor="idEquipGang"
								class="addFormLabelTime sapUiMediumMarginEnd" />
							<CheckBox id="idEquipGang" selected="{Input>/FlagGang}"
								editable="false" class="sapUiNoMargin" />
						</HBox>
						<HBox class="sapUiLargeMarginEnd customCheckBox"
							alignItems="Center">
							<Label text="{i18n>fuelIncluded}" labelFor="idFuelInc"
								class="addFormLabelTime sapUiMediumMarginEnd" />
							<CheckBox id="idFuelIncluded"
								selected="{= ${Input>/FuelFlag} === 'X' ? true : false }"
								class="sapUiNoMargin" select="onSelectFuelFlag" editable="true" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>costCode}" labelFor="idCostCode"
								class="addFormLabel sapUiSmallMarginEnd"
								visible="{= ${Form>/mode} === 'add'}" />
							<Input id="idCostCode" width="200px"
								value="{Input>/CostCode}" valueHelpRequest="onRequestCostCode"
								showValueHelp="true"
								required="{= ${Input>/Status} === '' || ${Input>/Status} === 'N' || ${Input>/Status} === 'W'}"
								class="addFormInput" editable="true" liveChange="onInputChange"
								visible="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>quantity}" labelFor="idQuantity"
								class="addFormLabel sapUiSmallMarginEnd"
								visible="{= ${Form>/mode} === 'add'}" />
							<Input id="idQuantity" width="200px"
								value="{Input>/TotQtyOperated}" type="Number"
								class="addFormInput" editable="true" liveChange="onInputChange"
								visible="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>status}"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input width="200px" class="addFormInput"
								value="{Input>/Status}" visible="{= ${Form>/mode} === 'add'}"
								liveChange="onInputChange" change="onAfterInputChanged"
								valueHelpRequest="onRequestEquipStatus" showValueHelp="true" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>recPersonNo}" labelFor="idRecPersonNo"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idRecPersonNo" width="200px"
								valueHelpRequest="onRequestPersonnel" showValueHelp="true"
								required="true" class="addFormInput" value="{Input>/ForemanNo}"
								visible="{= ${Form>/mode} === 'add'}" editable="true"
								liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>version}" labelFor="idVersion"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idVersion" width="200px" class="addFormInput"
								value="{Input>/Version}" editable="true"
								visible="{= ${Form>/mode} === 'add'}" liveChange="onInputChange" />
						</HBox>
					</VBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="saveEquip" text="Save" press="onPressEquipSave" />
		</beginButton>
		<endButton>
			<Button id="cancelEquip" text="Cancel" press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>