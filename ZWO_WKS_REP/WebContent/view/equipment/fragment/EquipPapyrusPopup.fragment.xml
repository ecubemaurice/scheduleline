<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog id="equipDetailsPapyrusDialog" contentWidth="800px"
		contentHeight="auto" title="{i18n>equipDetails}">
		<Panel class="summaryPapyrusHeader" width="100%">
			<content>
				<Toolbar height="125px">
					<VBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{i18n>papyrusWbsElement}"
								labelFor="papyrusWbsElementLabel"
								class="myMasterSmallFont customPapyrusHeaderTextColor">
							</Label>
							<Text text="{ProjectName}"
								class="myMasterLargeFont cutomTextColorPreview">
							</Text>
						</VBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{i18n>OneForemanTxt}"
								labelFor="foremanPaprusLabel"
								class="myMasterSmallFont customPapyrusHeaderTextColor">
							</Label>
							<Label text="{ForemanName}"
								labelFor="foremanNamePapyrusLabel"
								class="myMasterLargeFont cutomTextColorPreview">
							</Label>
							<Text text="{ForemanNo}"
								class="myMasterMediumFont cutomTextColorPreview">
							</Text>
						</VBox>
					</VBox>
					<ToolbarSpacer />
					<VBox class="sapUiSmallMargin">
						<Text
							text="{path: 'Day',  formatter: '.formatter.formatDisplayDay'}"
							class="myMasterSmallFont cutomTextColorPreview sapUiLargeMarginBottom customPapyrusHeaderText" />
					</VBox>
				</Toolbar>
			</content>
		</Panel>
		<Panel width="100%">
			<content>
				<Toolbar height="350px">
					<VBox width="100%">
						<HBox>
							<VBox class="sapUiSmallMargin sapUiMediumMarginEnd">
								<Label text="{i18n>Material}"
									labelFor="papyrusEquipmentLabel"
									class="myMasterSmallFont customPapyrusDetailsFontSize">
								</Label>
								<Text text="{EquipmentName}" class="myMasterLargeFont">
								</Text>
								<Text text="{EquipmentNo}" class="myMasterMediumFont">
								</Text>
							</VBox>
							<VBox class="sapUiSmallMargin">
								<Label text="{i18n>gangMaterial}" labelFor="flagGangLabel"
									class="myMasterSmallFont customPapyrusDetailsFontSize">
								</Label>
								<Text text="{= ${FlagGang} === true ? 'Yes' : 'No'}"
									class="myMasterMediumFont">
								</Text>
							</VBox>
						</HBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{MuName}" labelFor="unitPaprusLabel"
								class="myMasterSmallFont customPapyrusDetailsFontSize">
							</Label>
							<Text text="{Mu}" class="myMasterMediumFont">
							</Text>
						</VBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{i18n>activityType}"
								labelFor="activityTypePaprusLabel"
								class="myMasterSmallFont customPapyrusDetailsFontSize">
							</Label>
							<Text text="{ActivityType}" class="myMasterMediumFont">
							</Text>
						</VBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{i18n>price}" labelFor="pricePaprusLabel"
								class="myMasterSmallFont customPapyrusDetailsFontSize ">
							</Label>
							<Text text="{Price} {Currency}" class="myMasterMediumFont">
							</Text>
						</VBox>
						<HBox>
							<VBox class="sapUiSmallMargin sapUiMediumMarginEnd">
								<Label text="{i18n>fuelPrice}"
									labelFor="fuelPricePaprusLabel"
									class="myMasterSmallFont customPapyrusDetailsFontSize ">
								</Label>
								<Text text="{FuelPrice} {Currency}"
									class="myMasterMediumFont">
								</Text>
							</VBox>
							<VBox class="sapUiSmallMargin">
								<Label text="{i18n>fuelFlag}"
									labelFor="fuelFlagPaprusLabel"
									class="myMasterSmallFont customPapyrusDetailsFontSize ">
								</Label>
								<Text text="{= ${FuelFlag} === 'X' ? 'Yes' : 'No'}"
									class="myMasterMediumFont">
								</Text>
							</VBox>
						</HBox>
					</VBox>
					<ToolbarSpacer />
					<VBox width="100%"
						class="sapUiLargeMarginBottom customPapyrusDetEquip">
						<VBox class="sapUiSmallMargin">
							<Label
								text="{i18n>Qty} ({i18n>on} {path: 'Day',  formatter: '.formatter.formatDisplayDate'})"
								labelFor="papyrusQuantityLabel"
								class="myMasterSmallFont customPapyrusDetailsFontSize">
							</Label>
							<Text text="{Quantity} {Unit}" class="myMasterMediumFont">
							</Text>
						</VBox>
						<VBox class="sapUiSmallMargin">
							<Label text="{i18n>comment}" labelFor="commentPapyrusLabel"
								class="myMasterSmallFont customPapyrusDetailsFontSize">
							</Label>
							<Text text="{Comments}" class="myMasterMediumFont">
							</Text>
						</VBox>
					</VBox>
				</Toolbar>
			</content>
		</Panel>
		<endButton>
			<Button id="closePapyrusSummary" text="{i18n>close}"
				press="handleClosePapyrusSummary" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>