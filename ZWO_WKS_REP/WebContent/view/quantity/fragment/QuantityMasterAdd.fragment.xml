<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="masterAdd" class="masterAddDialog"
		title="{Form>/title}" draggable="true" busy="{Form>/busy}"
		busyIndicatorDelay="{Form>/BusyDelay}">
		<content>
			<f:SimpleForm id="masterAddForm" editable="true">
				<f:content>
					<VBox alignItems="End">
						<HBox alignItems="Center">
							<Label text="{i18n>costCode}" labelFor="idCostCode"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idCostCode" width="200px"
								value="{Input>/CostCode}" showValueHelp="true"
								valueHelpRequest="onRequestCostCode" required="true"
								class="addFormInput" editable="true" liveChange="onInputChange"
								submit="onSubmitCostCodeQty" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>costCodeDes}" labelFor="idcostCodeDes"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idCostCodeDes" width="200px"
								value="{Input>/CostCodeDes}" required="false"
								class="addFormInput" editable="false" liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>Unit}" labelFor="idUnitPrice"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idUnitPrice" width="200px" value="{Input>/Unit}"
								required="false" class="addFormInput" editable="false" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>Qty}" labelFor="idQuantity"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idQuantity" width="200px"
								value="{Input>/TotQuantity}" required="false"
								class="addFormInput" editable="{= ${Form>/mode} === 'add'}" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>recPersonNo}" labelFor="idRecPersonNo"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idRecPersonNo" width="200px"
								valueHelpRequest="onRequestPersonnel" showValueHelp="true"
								required="true" class="addFormInput" value="{Input>/ForemanNo}"
								visible="{= ${Form>/mode} === 'add'}" editable="true"
								liveChange="onInputChange" />
						</HBox>
						<HBox alignItems="Center">
							<Label text="{i18n>version}" labelFor="idVersion"
								visible="{= ${Form>/mode} === 'add'}"
								class="addFormLabel sapUiSmallMarginEnd" />
							<Input id="idVersion" width="200px" class="addFormInput"
								value="{Input>/Version}" editable="true"
								visible="{= ${Form>/mode} === 'add'}" liveChange="onInputChange" />
						</HBox>
					</VBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button id="saveQuantity" text="{i18n>save}"
				press="onPressQuantitySave" />
		</beginButton>
		<endButton>
			<Button id="cancelQuantity" text="{i18n>cancel}"
				press="handleClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>